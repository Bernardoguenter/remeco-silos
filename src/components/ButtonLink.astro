---
interface Props {
  link: string;
  label: string;
  style?: "primary" | "secondary";
}

const { link, label, style = "primary" } = Astro.props;
---

<button>
  <a
    href={link}
    class={`border px-4 py-2 border-slate-800 rounded ${style} === "primary" ? "bg-slate-800  text-white" : "bg-white text-slate-800"`}
    >{label}</a
  >
</button>
