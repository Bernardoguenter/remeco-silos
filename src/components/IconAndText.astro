---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

interface Props {
  altText: string;
  image: ImageMetadata;
  textLine1: string;
  textLine2: string;
}

const { altText, image, textLine1, textLine2 } = Astro.props;
---

<div class="flex md:flex-row flex-col items-center gap-4 p-2 max-w-1/3">
  <Picture
    alt={altText}
    src={image}
    width={200}
    height={200}
    class="max-w-[30px] lg:max-w-[50px]"
    layout="constrained"
    fit="cover"
    formats={["avif", "webp"]}
    loading="eager"
  />
  <div class="flex flex-col item">
    <h4 class="uppercase lg:text-left text-center">
      {textLine1}
    </h4>
    <h4 class="uppercase lg:text-left text-center">
      {textLine2}
    </h4>
  </div>
</div>
