---
import { Image } from "astro:assets";

interface IconAndText {
  altText: string;
  image: string;
  textLine1: string;
  textLine2: string;
}

const { altText, image, textLine1, textLine2 } = Astro.props;
---

<div class="flex md:flex-row flex-col items-center gap-4 p-2 max-w-1/3">
  <Image
    alt={altText}
    src={image}
  />
  <div class="flex flex-col item">
    <h3
      class="uppercase font-medium lg:text-base text-[.6rem] lg:text-left text-center">
      {textLine1}
    </h3>
    <h3
      class="uppercase font-medium lg:text-base text-[.6rem] lg:text-left text-center">
      {textLine2}
    </h3>
  </div>
</div>
