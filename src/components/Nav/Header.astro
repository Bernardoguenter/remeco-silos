---
import { Picture } from "astro:assets";
import logo from "../../assets/logoRemecoBlanco.png";
import Nav from "./Nav.astro";
---

<header
  class="h-20 py-2 px-4 lg:px-20 w-full flex justify-between items-center bg-slate-900">
  <a href="/"
    ><Picture
      src={logo}
      alt="Logo Metalúrgica Remecó"
      class="max-w-[150px]"
      layout="constrained"
      width={800}
    /></a
  >

  <Nav />
</header>
