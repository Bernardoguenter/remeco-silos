---
import { Image } from "astro:assets";
import ArrowFoward from "../assets/svg/ArrowFoward.astro";

interface Props {
  imageSrc: ImageMetadata;
  alt: string;
  title: string;
  imgWidth: number;
  imgHeight: number;
  link: string;
  layout?: "constrained" | "full-width" | "fixed" | "none";
}

const {
  imageSrc,
  alt,
  title,
  imgHeight,
  imgWidth,
  layout = "constrained",
  link,
} = Astro.props;
---

<article>
  <Image
    src={imageSrc}
    alt={alt}
    class="rounded-t-sm object-cover"
    width={imgWidth}
    height={imgHeight}
    layout={layout}
  />
  <aside class="bg-slate-900 flex justify-evenly items-center rounded-b-sm p-0">
    <h3 class="text-gray-100 w-9/10 p-4">
      {title}
    </h3>
    <a
      href={link}
      class="w-2/10 lg:w-1/10 hover:lg:w-2/10 md:w-2/10 hover:md:w-3/10 flex justify-end items-stretch bg-slate-800 h-full p-5 cursor-pointer rounded-br-sm">
      <span class="flex justify-end items-stretch h-full">
        <ArrowFoward color="white" />
      </span>
    </a>
  </aside>
</article>
